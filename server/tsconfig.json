{
  "compilerOptions": {
    "target": "ES2020",
    "module": "CommonJS",            // <-- FIX #1: Must be CommonJS for a 'node' start script
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",               // <-- FIX #2: Set 'src' as the root
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "types": ["node"]
  },
  "include": ["src/**/*"],          // <-- FIX #3: Only compile files in 'src'
  "exclude": ["node_modules"],
  "ts-node": {
    "transpileOnly": true,
    "compilerOptions": {
      "module": "CommonJS"
    }
  }
}